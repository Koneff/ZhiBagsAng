<html>
<head>
    <title>Zhitomir Bags</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/services.js"></script>
</head>
<body ng-app="zhibags">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>

        <script type="text/ng-template" id="/home.html">
            <a href = "/#/admin">Admin page</a>
            <div ng-repeat="quote in quotes">
                {{quote.quote}}  {{quote.author}}
            </div>

            <div ng-repeat="bag in bags | orderBy:'price'">
                <img src="{{bag.pic}}" alt="">
                {{bag.title}}  {{bag.price}} грн
            </div>
        </script>

        <script type="text/ng-template" id="/admin.html">
            <a href = "/#/home">Home page</a>
            <nav class="navbar navbar-default">
                <ul class="nav navbar-nav">
                    <li><a href="/#/home">Home page</a></li>
                    <li><a href="">Add bag/quote</a></li>
                    <li><a ui-sref-active="active" ui-sref=".allbags">All bags</a></li>
                    <li><a href="#/admin/#all_quotes">All quotes</a></li>
                    <li><a href="/#/home">Change</a></li>
                </ul>
            </nav>
            <form ng-submit="addBag()"
                  style="margin-top:30px;">
                <h3>Add a new bag</h3>

                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Title"
                           ng-model="title"
                           >
                </div>
                <div class="form-group">
                    <textarea
                           class="form-control"
                           rows="5"
                           placeholder="Description"
                           ng-model="desc"
                            >
                    </textarea>
                </div>

                <div class="form-group">
                    <input type="url"
                           class="form-control"
                           placeholder="Picture"
                           ng-model="pic"
                            >
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>

            <form ng-submit="addQuote()"
                  style="margin-top:30px;">
                <h3>Add a new quote</h3>
                <div class="form-group">
                    <textarea
                            class="form-control"
                            rows="5"
                            placeholder="Quote"
                            ng-model="quote"
                            >
                    </textarea>
                </div>
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Author"
                           ng-model="author"
                            >
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                </form>

            <form ng-submit="percentagePrice()"
                  style="margin-top:30px;">
                <h3>Change prices (%)</h3>

                <div class="form-group">
                    <input type="number"
                           class="form-control"
                           placeholder="%"
                           ng-model="dif"
                            >
                    <button type="submit" class="btn btn-primary">Change Prices</button>
                </div>
            </form>
            </div>
        </script>
        <script type="text/ng-template" id="/admin-bags.html">
            <div ng-repeat="bag in bags">
                <img src="{{bag.pic}}" alt="">
                {{bag.title}}  {{bag.price}} грн
            </div>
        </script>


    </div>

</div>

</body>