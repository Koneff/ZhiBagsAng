<html>
<head>
    <title>Zhitomir Bags</title>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/services.js"></script>
</head>
<body ng-app="zhibags">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>

        <script type="text/ng-template" id="/home.html">
            <link href="/stylesheets/style.css" rel="stylesheet">
            <div class="site-content">
                <section class="top">
                    <div class="quota">
                        <h2>Мотивитрует меня</h2>
                        <blockquote ng-repeat="quote in quotes">
                            <p>
                                "{{quote.quote}}"
                            </p>
                            <footer>
                                <cite>
                                    {{quote.author}}
                                </cite>
                            </footer>
                        </blockquote>
                    </div>
                </section>

                <section class="products">
                    <div ng-repeat="bag in bags | orderBy:'price'">
                        <img src="{{bag.pic}}" alt="">
                        {{bag.title}}  {{bag.price}} грн
                    </div>
                </section>

                <section class="cta">
                    <h2>Подписка</h2>
                    <h1>Будь на связи!</h1>
                    <div class="text">
                        Подпишись на наши новости
                        <br>
                        и лайкни на <a href=""target="_blank">фейсбуке</a>. Это даст:
                    </div>
                    <div class="container" style="padding-top: 50px">
                        <div class="priv" style="padding-top: 50px">
                            <div class="icon">
                                <i class="icon-bag"></i>
                            </div>
                            <div class="text">
                                <h3>Качество!</h3>
                                <p>Отличное качество</p>
                            </div>
                        </div>

                        <div class="priv" style="padding-top: 50px">
                            <div class="icon">
                                <i class="icon-bag"></i>
                            </div>
                            <div class="text">
                                <h3>Качество!</h3>
                                <p>Отличное качество</p>
                            </div>
                        </div>

                        <div class="priv" style="padding-top: 50px">
                            <div class="icon">
                                <i class="icon-bag"></i>
                            </div>
                            <div class="text">
                                <h3>Качество!</h3>
                                <p>Отличное качество</p>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="contact">
                    <h2>Есть вопросы?</h2>
                    <h1>Спишемся!</h1>
                    <p>
                        Пиши
                    </p>
                </section>
                <footer></footer>
            </div>
        </script>

        <script type="text/ng-template" id="/admin.html">
            <a href = "/#/home">Home page</a>
            <form ng-submit="addBag()"
                  style="margin-top:30px;">
                <h3>Add a new bag</h3>

                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Title"
                           ng-model="title"
                           >
                </div>
                <div class="form-group">
                    <textarea
                           class="form-control"
                           rows="5"
                           placeholder="Description"
                           ng-model="desc"
                            >
                    </textarea>
                </div>

                <div class="form-group">
                    <input type="url"
                           class="form-control"
                           placeholder="Picture"
                           ng-model="pic"
                            >
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>

            <form ng-submit="addQuote()"
                  style="margin-top:30px;">
                <h3>Add a new quote</h3>
                <div class="form-group">
                    <textarea
                            class="form-control"
                            rows="5"
                            placeholder="Quote"
                            ng-model="quote"
                            >
                    </textarea>
                </div>
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Author"
                           ng-model="author"
                            >
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                </form>

            <form ng-submit="percentagePrice()"
                  style="margin-top:30px;">
                <h3>Change prices (%)</h3>

                <div class="form-group">
                    <input type="number"
                           class="form-control"
                           placeholder="%"
                           ng-model="dif.value"
                            >
                    <button type="submit" class="btn btn-primary">Change Prices</button>
                    {{dif.value}}
                </div>
            </form>
            <div ng-repeat="bag in bags">
                <a href="#/bags/{{bag._id}}" target="_blank">{{bag.title}}</a>  {{bag.price}} грн
            </div>
            <div ng-repeat="quote in quotes">
                {{quote.quote}}  {{quote.author}} <button ng-click="deleteQuote(quote)">Delete</button>
            </div>
            </div>
        </script>

        <script type="text/ng-template" id="/bags.html">
            <div class="page-header">
                <img src="{{bag.pic}}" alt="">
                {{bag.title}}  {{bag.price}} грн
                {{bag.desc}}
            </div>
        </script>
    </div>

</div>

</body>